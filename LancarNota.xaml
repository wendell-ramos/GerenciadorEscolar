<Window x:Class="GerenciamentoEscolarAPP.Views.LancarNota"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lançar Notas" Height="400" Width="450" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Lançamento de Notas"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Aluno:"/>
            <ComboBox x:Name="cmbAluno" Margin="0,5,0,15" Width="250"/>

            <TextBlock Text="Disciplina:"/>
            <TextBox x:Name="txtDisciplina" Margin="0,5,0,15"/>

            <TextBlock Text="Nota:"/>
            <TextBox x:Name="txtNota" Margin="0,5,0,25"/>

            <Button Content="Salvar Nota"
                    Click="BtnSalvar_Click"
                    Height="35"
                    Background="#0078D7"
                    Foreground="White"/>

            <Button Content="Voltar"
                    Click="BtnVoltar_Click"
                    Height="35"
                    Margin="0,10,0,0"/>

            <TextBlock x:Name="txtMensagem"
                       Margin="0,15,0,0"
                       TextAlignment="Center"
                       Foreground="Green"/>
        </StackPanel>
    </Grid>
</Window>
