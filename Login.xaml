<Window x:Class="GerenciamentoEscolarAPP.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Gerenciamento Escolar" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Login" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtEmail" Margin="0,5,0,15"/>

            <TextBlock Text="Senha:"/>
            <PasswordBox x:Name="txtSenha" Margin="0,5,0,20"/>

            <Button Content="Entrar" Click="BtnEntrar_Click" Height="35" Background="#0078D7" Foreground="White"/>
            <Button Content="Cadastrar-se" Click="BtnCadastrar_Click" Margin="0,10,0,0"/>

            <TextBlock x:Name="txtMensagem" Foreground="Red" Margin="0,15,0,0" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
