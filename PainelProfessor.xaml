<Window x:Class="GerenciamentoEscolarAPP.Views.PainelProfessor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Painel do Professor" Height="400" Width="450" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" Margin="10">
            <Label x:Name="lblNomeProfessor" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

            <TextBlock Text="ID do Aluno:"/>
            <TextBox x:Name="txtAlunoId" Margin="0,5,0,10"/>

            <TextBlock Text="Matéria:"/>
            <TextBox x:Name="txtMateria" Margin="0,5,0,10"/>

            <TextBlock Text="Nota:"/>
            <TextBox x:Name="txtNota" Margin="0,5,0,15"/>

            <Button Content="Salvar Nota" Click="SalvarNota_Click" Height="35" Background="#0078D7" Foreground="White"/>

            <Label x:Name="lblStatus" FontWeight="Bold" Margin="0,15,0,0"/>
        </StackPanel>
        <Button Content="SAIR" HorizontalAlignment="Center" Margin="0,290,0,0" VerticalAlignment="Top" Background="Black" Click="Button_Click" Width="82" RenderTransformOrigin="-0.043,0.653" Foreground="White"/>
    </Grid>

</Window>
